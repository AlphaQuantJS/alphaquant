{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "checkJs": true,
    "allowJs": true,
    "declaration": true,
    "outDir": "dist"
  },
  "include": ["packages/**/*.js", "packages/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
